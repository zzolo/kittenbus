
# Throw Bindings.  We create non-default versions so that
# TeamViewer can send the commands
#
# Note that these assume display indexes and we assume the
# extra display that will show the project is on the left
# of the main display (index 0)
bind 1:ctrl;alt         throw 0 resize
bind 1:cmd              throw 0 resize
bind 2:ctrl;alt         throw 1 resize
bind 2:cmd              throw 1 resize
bind 3:ctrl;alt         throw 2 resize
bind right:ctrl;alt;cmd throw right resize
bind left:ctrl;alt;cmd  throw left  resize
bind up:ctrl;alt;cmd    throw up    resize
bind down:ctrl;alt;cmd  throw down  resize

# Window Hints
bind esc:cmd hint
